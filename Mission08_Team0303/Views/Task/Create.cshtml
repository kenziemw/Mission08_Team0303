@model Mission08_Team0303.Models.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Create Task";
}

<h2 class="text-center mt-4">Create a New Task</h2>

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg p-4 mt-3" style="width: 50%;">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Task.Name"></label>
                <input asp-for="Task.Name" class="form-control" />
                <span asp-validation-for="Task.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Task.DueDate"></label>
                <input asp-for="Task.DueDate" type="date" class="form-control" />
                <span asp-validation-for="Task.DueDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Task.CategoryId"></label>
                <select asp-for="Task.CategoryId" asp-items="Model.Categories" class="form-control" required>
                    <option value="">-- Select a Category --</option>
                </select>
                <span asp-validation-for="Task.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Task.Quadrant"></label>
                <select asp-for="Task.Quadrant" asp-items="Html.GetEnumSelectList<Mission08_Team0303.Models.Quadrant>()" class="form-control"></select>
                <span asp-validation-for="Task.Quadrant" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Task.Completed"></label>
                <input asp-for="Task.Completed" type="checkbox" />
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Create Task</button>
        </form>
    </div>
</div>
